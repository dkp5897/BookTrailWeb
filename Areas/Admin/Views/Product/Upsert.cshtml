@model ProductVM

<div class="border p-4 mt-5 shadow-sm bg-white rounded">
        <div class="row pb-2">
            <div class="col">
                <div class="bg-primary text-white text-center p-3 rounded">
                    <h1 class="mb-0">@(Model.Product.ProductId != 0 ? "Update" : "Create" ) Product</h1>
                </div>
                <hr />
            </div>
        </div>
    <form method="post" enctype="multipart/form-data">
        <input asp-for="Product.ProductId" hidden />
        <input asp-for="Product.ImageUrl" hidden />

        <div class="row">
            <div class="col-9">
                <!-- To Show all errors summary -->
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <!-- Product Name Input -->
                <div class="mb-4 row">
                    <label asp-for="Product.Title" class="col-sm-3 col-form-label fw-bold"></label>
                    <div class="col-sm-9">
                        <input asp-for="Product.Title" class="form-control" placeholder="Book title" />
                        <span asp-validation-for="Product.Title" class="text-danger"></span>
                    </div>
                </div>

                <!-- Display Order Input -->
                <div class="mb-4 row">
                    <label asp-for="Product.Description" class="col-sm-3 col-form-label fw-bold"></label>
                    <div class="col-sm-9">
                        <input asp-for="Product.Description" class="form-control" placeholder="Enter Description" />
                        <span asp-validation-for="Product.Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="mb-4 row">
                    <label asp-for="Product.Author" class="col-sm-3 col-form-label fw-bold"></label>
                    <div class="col-sm-9">
                        <input asp-for="Product.Author" class="form-control" placeholder="Enter Author Name" />
                        <span asp-validation-for="Product.Author" class="text-danger"></span>
                    </div>
                </div>
                <div class="mb-4 row">
                    <label asp-for="Product.ISBN" class="col-sm-3 col-form-label fw-bold"></label>
                    <div class="col-sm-9">
                        <input asp-for="Product.ISBN" class="form-control" placeholder="Enter ISBN" />
                        <span asp-validation-for="Product.ISBN" class="text-danger"></span>
                    </div>
                </div>
                <div class="mb-4 row">
                    <label asp-for="Product.ListPrice" class="col-sm-3 col-form-label fw-bold"></label>
                    <div class="col-sm-9">
                        <input asp-for="Product.ListPrice" class="form-control" placeholder="Enter List Price" />
                        <span asp-validation-for="Product.ListPrice" class="text-danger"></span>
                    </div>
                </div>
                <div class="mb-4 row">
                    <label asp-for="Product.Price" class="col-sm-3 col-form-label fw-bold"></label>
                    <div class="col-sm-9">
                        <input asp-for="Product.Price" class="form-control" placeholder="Enter Price" />
                        <span asp-validation-for="Product.Price" class="text-danger"></span>
                    </div>
                </div>
                <div class="mb-4 row">
                    <label asp-for="Product.Price50" class="col-sm-3 col-form-label fw-bold"></label>
                    <div class="col-sm-9">
                        <input asp-for="Product.Price50" class="form-control" placeholder="Enter Price for 1-50" />
                        <span asp-validation-for="Product.Price50" class="text-danger"></span>
                    </div>
                </div>
                <div class="mb-4 row">
                    <label asp-for="Product.Price100" class="col-sm-3 col-form-label fw-bold"></label>
                    <div class="col-sm-9">
                        <input asp-for="Product.Price100" class="form-control" placeholder="Enter Price for 1-100" />
                        <span asp-validation-for="Product.Price100" class="text-danger"></span>
                    </div>
                </div>
                <div class="mb-4 row">
                    <label asp-for="Product.CategoryId" class="col-sm-3 col-form-label fw-bold"></label>
                    <div class="col-sm-9">
                        @* <select asp-for="CategoryId" asp-items="ViewBag.CategoryList" class="form-select"> *@
                        @* <select asp-for="CategoryId" asp-items="@(ViewData.CategoryList as IEnumerable<SelectListItem>)" class="form-select"> *@
                        <select asp-for="@Model.Product.CategoryId" asp-items="@Model.CategoryList" class="form-select">
                            <option disabled selected hidden>--Select Category--</option>
                        </select>
                        <span asp-validation-for="@Model.Product.CategoryId" class="text-danger"></span>
                    </div>
                </div>
                <div class="mb-4 row">
                    <label asp-for="Product.ImageUrl" class="col-sm-3 col-form-label fw-bold"></label>
                    <div class="col-sm-9">
                        <input type="file" name="file" class="form-control" placeholder="Image Url"/>
                    </div>
                </div>
            </div>
            <div class="col-3">
                <div class="border rounded bg-light p-2 d-flex justify-content-center align-items-center">
                    <img src="@Model.Product.ImageUrl" class="img-fluid rounded" alt="Product Image" style="max-height: 180px;" />
                </div>
            </div>
        </div>

        <!-- Buttons -->
        <div class="row">
            <div class="col-12 col-md-3">
                @if(Model.Product.ProductId != 0)
                {
                    <button type="submit" class="btn btn-primary w-100">Update</button>
                }
                else
                {
                    <button type="submit" class="btn btn-primary w-100">Create</button>
                }
            </div>
            <div class="col-12 col-md-3 mt-2 mt-md-0">
                <a asp-controller="Product" asp-action="Index" class="btn btn-secondary w-100">
                    Back to List
                </a>
            </div>
        </div>
    </form>
</div>



@* Adding client side validation (we need to use JS) *@
@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial"/>
    }
}