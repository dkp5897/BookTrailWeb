@model Category

<form method="post">
    <input asp-for="CategoryId" hidden />
    <div class="border p-4 mt-5 shadow-sm bg-white rounded">
        <div class="row pb-2">
            <div class="col">
                <div class="bg-primary text-white text-center p-3 rounded">
                    <h1 class="mb-0">Delete Category</h1>
                </div>
                <hr />
            </div>
        </div>

        <!-- Category Name (Disabled) -->
        <div class="mb-4 row">
            <label asp-for="Name" class="col-sm-3 col-form-label fw-bold">Category Name</label>
            <div class="col-sm-9">
                <input asp-for="Name" disabled class="form-control" />
            </div>
        </div>

        <!-- Display Order (Disabled) -->
        <div class="mb-4 row">
            <label asp-for="DisplayOrder" class="col-sm-3 col-form-label fw-bold">Display Order</label>
            <div class="col-sm-9">
                <input asp-for="DisplayOrder" disabled class="form-control" />
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="row">
            <div class="col-12 col-md-3">
                <button type="submit" class="btn btn-danger w-100">Delete</button>
            </div>
            <div class="col-12 col-md-3 mt-2 mt-md-0">
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary w-100">
                    Back to List
                </a>
            </div>
        </div>
    </div>
</form>
