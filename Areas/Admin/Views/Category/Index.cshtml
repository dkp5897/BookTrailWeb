@model List<Category>
@* @if(TempData["success"] != null)
{
        <h1>@TempData["success"]</h1>
} *@

<div class="container">
    <div class="row pt-4 pb-2">
        <div class="col-12">
            <div class="bg-primary text-white p-3 rounded d-flex justify-content-between align-items-center">
                <h1 class="mb-0">Category List</h1>
                <a asp-controller="Category" asp-action="Create" class="btn btn-light text-primary">
                    <i class="bi bi-patch-plus"></i> Create New Category
                </a>
            </div>
        </div>
    </div>

    <table class="table table-bordered table-striped mt-4">
        <thead class="table-primary">
            <tr>
                <th>Category Name</th>
                <th>Display Order</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.DisplayOrder</td>
                    <td class="text-end">
                        <div class="btn-group w-75" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.CategoryId" class="btn btn-primary">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.CategoryId" class="btn btn-danger">
                                <i class="bi bi-trash3-fill"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
